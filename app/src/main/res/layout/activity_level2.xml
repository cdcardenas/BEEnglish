<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Skyblue"
    tools:context="com.cdcc.beenglish.level2Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Puntaje : 10"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@drawable/square"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView11"
        android:src="@drawable/shirt4"

        android:layout_alignTop="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:id="@+id/gridLayout">


    </GridLayout>

    <ImageButton

        android:scaleType="fitCenter"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:padding="10dp"
        android:src="@drawable/shirt4"
        android:background="@color/Skyblue"
       android:layout_gravity="center"
        android:layout_marginTop="54dp"
        android:id="@+id/imageButton15"
        android:layout_below="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton14"
        android:background="@color/Skyblue"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/belt"
        android:layout_alignTop="@+id/imageButton15"
        android:layout_alignEnd="@+id/imageView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tiempo: 34"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="16dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton16"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:background="@color/Skyblue"
        android:src="@drawable/sneakers"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton15" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton17"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:background="@color/Skyblue"
        android:layout_alignTop="@+id/imageButton16"
        android:layout_alignStart="@+id/imageButton14"
        android:src="@drawable/tie" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton18"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:background="@color/Skyblue"
        android:src="@drawable/pausa"
        android:layout_below="@+id/gridLayout"
        android:layout_toEndOf="@+id/imageView10" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton19"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:background="@color/Skyblue"
        android:src="@drawable/regresar"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/gridLayout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_below="@+id/imageButton18" />

</RelativeLayout>
