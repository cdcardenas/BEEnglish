<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context="com.cdcc.beenglish.Level1Activity">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:src="@drawable/abeja"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:src="@drawable/flor"
        android:layout_above="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginBottom="66dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:src="@drawable/flor"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView5"
        android:src="@drawable/flor"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toStartOf="@+id/imageView2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView6"
        android:src="@drawable/flor"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginBottom="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10"
        android:id="@+id/textView2"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_above="@+id/imageView4"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="7"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_above="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginStart="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_above="@+id/imageView5"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_above="@+id/imageView6"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="tiempo: 60"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:id="@+id/imageButton11"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/lightgreen"
        android:src="@drawable/regresar"
        android:onClick="VolverUno"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignEnd="@+id/imageView3" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:id="@+id/imageButton12"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/lightgreen"
        android:src="@drawable/pausa"
        android:layout_alignTop="@+id/imageButton11"
        android:layout_toEndOf="@+id/imageButton11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Puntaje: 20"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/textView5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton11" />

</RelativeLayout>
