<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/drawer_layout"
    android:background="@color/Skyblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="¿Quien va a jugar?"
            android:textAlignment="center"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="0.18" />

        <ImageButton
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/boy"
            android:scaleType="fitCenter"
            android:padding="40dp"
            android:background="@color/Skyblue"
            android:adjustViewBounds="true"
            android:onClick="niveles"
            android:contentDescription="Avatar1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="JORGE"
            android:textStyle="bold"
            android:id="@+id/textoperfil1"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:id="@+id/imageButton3"
            android:adjustViewBounds="true"
            android:src="@drawable/girl"
            android:background="@color/Skyblue"
            android:scaleType="fitCenter"
            android:padding="40dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ANITA"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/textoperfil2"

            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/addsomething"
            android:background="@color/Skyblue"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="add"
            android:onClick="agregarPerfil"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="AÑADIR"
            android:id="@+id/textView3"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@color/Skyblue"/>


</android.support.v4.widget.DrawerLayout>