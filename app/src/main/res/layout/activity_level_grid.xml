<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Skyblue"
    tools:context="com.cdcc.beenglish.LevelGridActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/niveles" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton7"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/Skyblue"
        android:src="@drawable/number2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageButton8" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton8"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/Skyblue"
        android:src="@drawable/number1"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:id="@+id/imageView8"

        android:src="@drawable/dere"
        android:layout_alignBottom="@+id/imageButton7"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageButton7" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton9"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/Skyblue"
        android:src="@drawable/number3"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:id="@+id/imageView9"
        android:src="@drawable/izq"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_toStartOf="@+id/imageButton7" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton10"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/Skyblue"
        android:src="@drawable/regresar"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView7" />

</RelativeLayout>
